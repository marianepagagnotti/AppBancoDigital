<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.MainPage" BackgroundColor="#fbf6f6" >

    <ContentPage.Content>
        <StackLayout>

            <Image x:Name="logo" HeightRequest="400" WidthRequest="100" Margin="30,0,0,0" />
            

            <Button Text="Entrar"  
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    FontSize="17"
                    FontAttributes="None"
                    BackgroundColor="Transparent" 
                    BorderColor="white"
                    BorderWidth="3"
                    CornerRadius="40"
                    TextColor="#bb6f2c"
                    Clicked="Button_Clicked"    
                    Margin="0,30,0,0"/>

            <Button Text="Cadastrar" 
                    BorderColor="white" 
                    BorderWidth="3" 
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    FontSize="16"
                    CornerRadius="40"
                    FontAttributes="None"
                    BackgroundColor="Transparent" 
                    TextColor="#bb6f2c"
                    Clicked="Button_Clicked_1"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
